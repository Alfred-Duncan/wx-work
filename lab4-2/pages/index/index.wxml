<view class="all">
<view class="up">
<view style="display:flex;">
<label class="lable">学号：</label>
<input type="digit" bindinput="handleInput1" class="input" placeholder="请输入你的学号" auto-focus="true"/></view>
<view style="display:flex;">
<label class="lable">姓名：</label>
<input type="digit" bindinput="handleInput2" class="input" placeholder="请输入你的姓名" auto-focus="true"/></view>
<view style="display:flex;">
<label class="lable">年龄：</label>
<input type="digit" bindinput="handleInput3" class="input" placeholder="请输入你的年龄" auto-focus="true"/></view>
<view style="display:flex;">
<label class="lable">电话：</label>
<input type="digit" bindinput="handleInput4" class="input" placeholder="请输入你的电话" auto-focus="true"/></view>
<radio-group>
<label>性别：</label>
<radio>男</radio>
<radio>女</radio>
</radio-group>
</view>
<radio-group class="one">
<label>专业：</label>
<radio>软件工程</radio>
<radio>物联网</radio>
<radio>集成设计</radio>
<radio>大数据</radio>
<radio>移动计算</radio>
</radio-group>
<picker mode="date" header-text="入学日期"  value="{{date}}" bindchange="bindDateChange">
<view class="font">
<text class="color3">入学日期：</text>
<text class="color6">{{date}}</text>
<text class="timeIcon">▼</text>
</view>
</picker>
<radio-group class="two">
<label>请选择你的爱好：</label>
<view>\n</view>
<radio>足球</radio>
<radio>篮球</radio>
<radio>美术</radio>
<radio>唱歌</radio>
<radio>创意编程</radio>
<radio>健身</radio>
</radio-group>
<view>
<label class="lable1">个人简介：</label>
<textarea type="digit" bindinput="handleInput5" class="input1"  placeholder="" auto-focus="true"/></view>
<view style="display:flex;">
<button style="width: 300rpx; height: 90rpx; background-color: rgb(19, 226, 88);">提交</button>
<button style="width: 300rpx; height: 90rpx; background-color: rgb(252, 252, 249);">重置</button></view>
<image class="image" src="/image/1.png"></image>
</view>

